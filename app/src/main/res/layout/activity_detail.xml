<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <android.support.design.widget.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />
    <!--android:theme="@style/Toolbar"-->
  </android.support.design.widget.AppBarLayout>
  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <ProgressBar
        android:id="@+id/loading_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Placeholder Title"
        />
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_margin="@dimen/text_margin"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer sollicitudin sagittis egestas. Sed non ornare diam, in iaculis magna. Vivamus scelerisque sapien sem, in tristique orci ullamcorper vel. Cras elit orci, mollis vel arcu sit amet, elementum ornare lacus. Maecenas egestas est sit amet diam congue, sit amet fermentum metus vestibulum. Curabitur porta consectetur est vel accumsan. Nullam sapien massa, porta interdum bibendum ut, pharetra at lorem."
        />
  </RelativeLayout>
</LinearLayout>