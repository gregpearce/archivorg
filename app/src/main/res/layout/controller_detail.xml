<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <View
      android:id="@+id/modal_background"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/black_transparent_50"
      />
  <android.support.design.widget.CoordinatorLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/profile_background"
        android:fillViewport="true"
        app:behavior_hideable="true"
        app:behavior_peekHeight="@dimen/detail_sheet_peek_height"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        >
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <FrameLayout
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_sheet_peek_height"
            tools:visibility="gone"
            >
          <ProgressBar
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              />
        </FrameLayout>
        <TextView
            android:id="@+id/tap_to_retry_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_sheet_peek_height"
            android:gravity="center"
            android:minHeight="64sp"
            android:text="Failed to load content.\nTap here to retry."
            />
        <LinearLayout
            android:id="@+id/details_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
          <TextView
              android:id="@+id/title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/text_margin"
              android:ellipsize="end"
              android:maxLines="2"
              android:textSize="22sp"
              android:textStyle="bold"
              tools:text="Placeholder Title"
              />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal"
              >
            <gregpearce.archivorg.ui.widget.ProfileButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:src="@drawable/ic_star_border_black_24dp"
                app:text="@string/about"
                app:tint="@color/button_profile_tint"
                >
            </gregpearce.archivorg.ui.widget.ProfileButton>
            <gregpearce.archivorg.ui.widget.ProfileButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:src="@drawable/ic_share_black_24dp"
                app:text="@string/share"
                app:tint="@color/button_profile_tint"
                >
            </gregpearce.archivorg.ui.widget.ProfileButton>
            <gregpearce.archivorg.ui.widget.ProfileButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:src="@drawable/ic_file_download_black_24dp"
                app:text="@string/files"
                app:tint="@color/button_profile_tint"
                >
            </gregpearce.archivorg.ui.widget.ProfileButton>
          </LinearLayout>
          <WebView
              android:id="@+id/description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/title"
              android:layout_margin="@dimen/text_margin"
              android:visibility="gone"
              />
        </LinearLayout>
      </FrameLayout>
    </android.support.v4.widget.NestedScrollView>
  </android.support.design.widget.CoordinatorLayout>
</FrameLayout>
