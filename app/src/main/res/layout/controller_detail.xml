<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <android.support.design.widget.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/ActionBar"
      >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:minHeight="64dp"
        />
  </android.support.design.widget.AppBarLayout>
  <FrameLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"
        >
      <ProgressBar
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          />
    </FrameLayout>
    <TextView
        android:id="@+id/tap_to_retry_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/tap_to_retry"
        tools:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/details_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/text_margin"
          android:ellipsize="end"
          android:maxLines="2"
          android:textSize="22sp"
          android:textStyle="bold"
          tools:text="Placeholder Title"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal"
          >
        <gregpearce.archivorg.platform.detail.BookmarkButton
            android:id="@+id/button_bookmark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:text="@string/bookmark"
            app:tint="@color/button_profile_tint"
            >
        </gregpearce.archivorg.platform.detail.BookmarkButton>
        <gregpearce.archivorg.platform.widget.ProfileButton
            android:id="@+id/button_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:src="@drawable/ic_share_black_24dp"
            app:text="@string/share"
            app:tint="@color/button_profile_tint"
            >
        </gregpearce.archivorg.platform.widget.ProfileButton>
        <gregpearce.archivorg.platform.widget.ProfileButton
            android:id="@+id/button_files"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:src="@drawable/ic_file_download_black_24dp"
            app:text="@string/files"
            app:tint="@color/button_profile_tint"
            >
        </gregpearce.archivorg.platform.widget.ProfileButton>
      </LinearLayout>
      <WebView
          android:id="@+id/description"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/title"
          android:layout_margin="@dimen/text_margin"
          android:visibility="gone"
          />
    </LinearLayout>
</LinearLayout>
